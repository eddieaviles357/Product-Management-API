{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.productmanagement.com/v1/addProduct.schema.json",
  "title": "AddProduct",
  "description": "Adds new product",
  "type": "object",
  "properties": {
    "sku": {
      "description": "sku",
      "type": "string",
      "minLength": 1,
      "maxLength": 8
    },
    "name": {
      "description": "name",
      "type": "string",
      "minLength": 6,
      "maxLength": 25
    },
    "description": {
      "description": "description",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "price": {
      "description": "price",
      "type": "number",
      "multipleOf" : 0.01,
      "minimum": 0,
      "exclusiveMaximum": 100000
    },
    "imageURL": {
      "description": "image url",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    }
  },
  "additionalProperties": false,
  "required": [
    "sku",
    "name",
    "description",
    "price",
    "imageURL"
  ]
}
